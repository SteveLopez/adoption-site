<h1>Listing children</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Gender</th>
    <th>Date of birth</th>
    <th>Country of origin</th>
    <th>Eligible</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @children.each do |child| %>
  <tr>
    <td><%= child.name %></td>
    <td><%= child.gender %></td>
    <td><%= child.date_of_birth %></td>
    <td><%= child.country_of_origin %></td>
    <td><%= child.eligible %></td>
    <td><%= link_to 'Show', child %></td>
    <td><%= link_to 'Edit', edit_child_path(child) %></td>
    <td><%= link_to 'Destroy', child, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

